#!/usr/bin/env bash

if ! command -v fzf >/dev/null 2>&1; then
  echo "Error: fzf is required for co" >&2
  exit 1
fi

if ! command -v codex >/dev/null 2>&1; then
  echo "Error: codex CLI is not on PATH" >&2
  exit 1
fi

mapfile -t options <<'OPTIONS'
Default:::codex --yolo --search --model gpt-5.2-codex -c model_reasoning_effort="high" -c model_verbosity="medium"
Fast:::codex --yolo --search --model gpt-5.2-codex -c model_reasoning_effort="high" -c model_verbosity="low"
Chat:::codex --yolo --search --model gpt-5.2 -c model_reasoning_effort="high" -c model_verbosity="medium"
Chat Fast:::codex --yolo --search --model gpt-5.2 -c model_reasoning_effort="high" -c model_verbosity="low"
OPTIONS

if [ ${#options[@]} -eq 0 ]; then
  echo "Error: no Codex profiles defined" >&2
  exit 1
fi

selection=$(printf '%s
' "${options[@]}" | fzf --reverse --tiebreak=begin --prompt "codex> " --header "Select a Codex profile (Enter to run)" --height 40% --border)
status=$?

if [ $status -ne 0 ] || [ -z "$selection" ]; then
  exit $status
fi

profile_command=${selection#*:::}

extra_args=""
if [ $# -gt 0 ]; then
  for arg in "$@"; do
    extra_args+=" $(printf '%q' "$arg")"
  done
fi

printf 'Running %s\n' "$selection"
eval "$profile_command$extra_args"
