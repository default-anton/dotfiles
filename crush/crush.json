{
  "$schema": "https://charm.land/crush.json",
  "models": {
    "large": {
      "model": "gpt-5",
      "provider": "openai",
      "reasoning_effort": "medium"
    },
    "small": {
      "model": "gpt-5-mini",
      "provider": "openai",
      "reasoning_effort": "low"
    }
  },
  "permissions": {
    "allowed_tools": [
      "agent",
      "view",
      "glob",
      "ls",
      "grep",
      "fetch",
      "download",
      "sourcegraph",
      "mcp_screenshot-website-fast_take_screenshot",
      "mcp_screenshot-website-fast_take_screencast",
      "mcp_screenshot-website-fast_capture_console"
    ]
  },
  "mcp": {
    "screenshot-website-fast": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@just-every/mcp-screenshot-website-fast"
      ],
      "env": {
        "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
      }
    }
  }
}
