{
  "eslint.autoFixOnSave": true,
  "prettier.disableSuccessMessage": true,
  "list.source.files.command": "fd",
  "list.source.files.args": [
    "--type",
    "f",
    "--hidden",
    "--follow",
    "--ignore-case",
    "--exclude",
    "'.git'"
  ],
  "list.source.grep.command": "rg",
  "list.source.grep.defaultOptions": ["--interactive", "--auto-preview"],
  "list.source.gstatus.defaultOptions": ["--ignore-case", "--normal"],
  "list.source.buffers.defaultOptions": ["--ignore-case"],
  "list.source.lines.defaultOptions": ["--interactive", "--ignore-case"],
  "coc.source.emoji.filetypes": ["markdown", "gitcommit"],
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "pyright.organizeimports.provider": "isort",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "json",
    "go",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "dockerfile",
    "sh",
    "html",
    "sql",
    "css"
  ],
  "coc.preferences.rootPatterns": [
    ".vim",
    ".git",
    ".projections.json",
    "pubspec.lock",
    "Gopkg.lock",
    "package.json",
    "Gemfile",
    "Rakefile",
    "Makefile",
    "requirements.txt",
    "venv",
    "Pipfile",
    "Pipfile.lock"
  ]
}
