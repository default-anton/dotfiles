{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "180000",
    "BASH_MAX_TIMEOUT_MS": "300000",
    "CLAUDE_CODE_USE_VERTEX": "1",
    "CLOUD_ML_REGION": "us-east5",
    "ANTHROPIC_VERTEX_PROJECT_ID": "aha-staging-1"
  },
  "permissions": {
    "allow": [
      "Bash(basename:*)",
      "Bash(bin/bundle:*)",
      "Bash(bin/rails:*)",
      "Bash(bin/rake:*)",
      "Bash(bin/rspec:*)",
      "Bash(bin/rubocop:*)",
      "Bash(bundle exec rails:*)",
      "Bash(bundle exec rake:*)",
      "Bash(bundle exec rspec:*)",
      "Bash(bundle exec rubocop:*)",
      "Bash(bundle list:*)",
      "Bash(cat:*)",
      "Bash(chmod +x:*)",
      "Bash(date:*)",
      "Bash(dirname:*)",
      "Bash(echo:*)",
      "Bash(env:*)",
      "Bash(fd:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git rebase:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm exec:*)",
      "Bash(printenv:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(rails:*)",
      "Bash(rake:*)",
      "Bash(readlink:*)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(rspec:*)",
      "Bash(rubocop:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "WebFetch",
      "WebSearch",
      "mcp__screenshot-website-fast__take_screenshot",
      "mcp__screenshot-website-fast__take_screencast",
      "mcp__screenshot-website-fast__capture_console"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); cd \"$current_dir\"; branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo 'no-git'); printf \"\\033[34m%s\\033[0m \\033[33m(%s)\\033[0m\" \"$(basename \"$current_dir\")\" \"$branch\""
  },
  "alwaysThinkingEnabled": true
}
